---
// Component Imports
import MainHead from "../components/MainHead.astro";
import MainBody from "../components/MainBody.astro";
import PostItem from "../components/PostItem.jsx";
import ImageColors from "../components/ImageColor.jsx";
import { sortDate } from "../scripts/utils.js";
import GameOfLife from "../components/GameOfLife.astro";
import WorkDisplay from "../components/WorkDisplay";

const posts = await Astro.glob("./thoughts/*.md");
const topPosts = posts.sort(sortDate).slice(0, 2);
---

<html lang="en">
  <head>
    <MainHead
      title="Nicole Huang - Frontend Developer"
      description="Nicole Huang is a Frontend Developer"
    />
  </head>
  <MainBody client:visible>
    <section id="hero" class="py-24 intro-animation relative">
      <h1 class="text-5xl mb-4 font-europa_bold text-center">
        Hello, my name is Nicole
      </h1>
      <h2 class="text-3xl font-europa_light text-center">
        I am a frontend developer and I love what I do
      </h2>
      <div class="flex justify-center pt-10">
        <img
          class="rounded-full"
          src="../../public/images/me.png"
          width="200px"
        />
      </div>
    </section>
    <section class="bg-[var(--green1)] w-screen h-full pt-20 pb-20">
      <section class="max-w-[1100px] w-full mx-auto h-72 bg-[var(--green3)] rounded-[35px] flex flex-col items-center justify-center">
        <h2 class="text-3xl text-[white] font-europa_regular">
          Hi. Nice to meet you
        </h2>
        <p class="text-2xl text-[white] font-europa_light mt-4">
          I begin my journey as a frontend developer 3 years ago. 
          <br/>
          I excel at creating responsive and visually appealing web applications.
          <br/>
          I'm quietly confident, naturally curious, and perpetually working on improving my chops.
          <br/>
          After gaining experience working in China, I now aspire to work remotely on a global scale.
        </p>
      </section>
      <section class="w-full mt-32">
        <h2 class="text-4xl font-europa_regular text-center">My Recent Work</h2>
        <div class="max-w-[1280px] mx-auto flex mt-20 gap-4">
          <WorkDisplay
            bgColor="white"
            symbol="../../public/images/dedao.png"
            symbolWidth={200}
            text="Efficient knowledge services."
            url="https://www.igetget.com/"
            client:visible
          />
          <WorkDisplay
            bgColor="black"
            symbol="../../public/images/tiktok.png"
            symbolWidth={100}
            text="The workspace for Chinese TikTok customer service to address user feedback."
            picture="../../public/images/offline_workspace.png"
            client:visible
          />
          <WorkDisplay
            bgColor="white"
            symbol="../../public/images/capcut.png"
            symbolWidth={100}
            text="Offer user tutorials for video editing. (a module within the Chinese CapCut App)"
            picture="../../public/images/capcut_tutorial.jpg"
            client:visible
          />
        </div>
      </section>
    </section>
  </MainBody>
</html>
